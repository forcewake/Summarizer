@model Web.Models.Text

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Text</legend>

    <div class="display-label">FullText</div>
    <div class="display-field">@Model.FullText</div>

    <div class="display-label">ShortText</div>
    <div class="display-field">@Model.ShortText</div>

    <div class="display-label">Language</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Language).ToString()</div>

    <div class="display-label">DisplayLines</div>
    <div class="display-field">@Model.DisplayLines</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


